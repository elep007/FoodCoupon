<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_coupon_item"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgCoupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
            <ImageView
                android:id="@+id/imgFavor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_favor_red"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtCouponName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText1"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:text="testName"/>
                <ImageView
                    android:id="@+id/imgCouponCard"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:scaleX="-1"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_coupon"/>
                <TextView
                    android:id="@+id/txtCouponCount"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:textAlignment="center"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:layout_alignEnd="@+id/imgCouponCard"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtCouponDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:maxLines="1"
                android:text="testDescription"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>